/* pages/details/details.wxss */
.details {
  background-color: #f9f9f9;
  padding-bottom: 100rpx;
}
.details .swiper {
  height: 700rpx;
}
.details .swiper .container {
  height: 700rpx;
}
.details .swiper .container .top-img .swiper-item .s_image {
  height: 100%;
}
.details .detail-wrapper {
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  margin: 14rpx 0 0;
}
.details .detail-wrapper .price .money {
  font-size: 40rpx;
  font-weight: 600;
  color: #f01;
}
.details .detail-title {
  background-color: #fff;
  font-size: 28rpx;
  padding: 0 20rpx;
  line-height: 40rpx;
}
.details .primary {
  padding: 20rpx;
  margin-top: 30rpx;
  line-height: 50rpx;
  font-size: 29rpx;
  color: #333;
  background-color: #fff;
}
.details .primary .social {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}
.details .primary .social .left-text .dimtx {
  margin-right: 20rpx;
}
.details .primary .social .arrow {
  color: #99a7c1;
}
.details .primary .express {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}
.details .primary .service {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}
.details .primary .service .arrow {
  color: #99a7c1;
}
.details .primary .dark {
  color: #a3a0a0;
  font-size: 26rpx;
}
.details .primary .item_name {
  flex: 1;
  padding-left: 30rpx;
}
.details .primary .item_name text {
  margin-right: 20rpx;
}
.details .primary .item_name text:last-child {
  display: none;
}
.details .merchant {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 0;
  padding: 10rpx 0;
  background-color: #fff;
}
.details .merchant .m_left {
  margin-left: 20rpx;
}
.details .merchant .m_left .shop_logo {
  width: 140rpx;
  height: 140rpx;
}
.details .merchant .m_right {
  flex: 1;
  padding: 0 22rpx;
}
.details .merchant .m_right .shop_name {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.details .merchant .m_right .go_shop {
  color: #f77979;
}
.details .merchant .m_right .shop_info {
  display: flex;
  align-items: center;
  height: 40rpx;
}
.details .merchant .m_right .shop_info .describe {
  display: flex;
  padding-right: 30rpx;
  margin-right: 20rpx;
  border-right: solid #ccc 2rpx;
  height: 30rpx;
}
.details .merchant .m_right .shop_info .describe .star {
  width: 30rpx;
  height: 30rpx;
}
.details .merchant .m_right .shop_info .online {
  font-size: 24rpx;
}
.details .merchant .m_right .attention {
  width: 200rpx;
  font-size: 24rpx;
  padding: 4rpx 0;
  border: solid #f04 2rpx;
  border-radius: 25rpx;
  text-align: center;
  margin-top: 10rpx;
  color: #f01;
}
.details .image-text .text_title {
  height: 60rpx;
  color: #ff607d;
}
button:not([size='mini']) {
  width: 100rpx !important;
}
.enter-cart {
  width: 200rpx !important;
  flex: 0 !important;
  margin-left: 20rpx;
}
.enter-cart .van-goods-action-button--first {
  width: 200rpx !important;
  margin: 0 !important;
}
.enter-cart .van-goods-action-button--first .van-button--warning {
  width: 200rpx !important;
}
.van-goods-action-button--last {
  width: 200rpx;
}
.van-goods-action-button--last .van-button--normal {
  width: 200rpx !important;
}
.explain {
  font-size: 36rpx;
  color: #9b9696;
  text-align: center;
  line-height: 80rpx;
}
.s_cont {
  padding: 20rpx 0;
  padding-right: 30rpx;
  margin-left: 30rpx;
  border-bottom: solid #e2dfdf 2rpx;
}
.s_cont .item_text {
  font-size: 26rpx;
  color: #88898a;
}
.van-popup {
  overflow-y: visible !important;
  padding: 25rpx;
}
.van-popup .popup_top {
  height: 160rpx;
  display: flex;
}
.van-popup .popup_top .top_left {
  width: 200rpx;
  padding-right: 20rpx;
}
.van-popup .popup_top .top_left image {
  width: 100%;
  height: 210rpx;
  margin-top: -80rpx;
  box-shadow: 4rpx 4rpx 15rpx #ccc;
}
.van-popup .colour .colour_title {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #a2a2a2;
}
.van-popup .colour .c_container text {
  padding: 10rpx 20rpx;
  border: solid #d8d8d8 2rpx;
  margin: 20rpx 14rpx 0;
  border-radius: 7rpx;
  font-size: 24rpx;
  color: #333;
}
.van-popup .colour .c_container text.changecolor {
  color: #ff5777;
  border: solid #ff5777 2rpx;
}
.van-popup .size_title {
  height: 70rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  color: #a2a2a2;
}
.van-popup .m_size {
  display: flex;
  flex-wrap: wrap;
}
.van-popup .m_size .items {
  padding: 10rpx 20rpx;
  border: solid #d8d8d8 2rpx;
  margin: 20rpx 14rpx 0;
  border-radius: 7rpx;
  font-size: 24rpx;
  color: #333;
}
.van-popup .m_size .items.active {
  color: #ff5777;
  border: solid #ff5777 2rpx;
}
