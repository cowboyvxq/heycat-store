/* pages/payment/payment.wxss */
.payment {
  height: 100vh;
  padding: 20rpx;
  background-color: #f5f5f5;
}
.payment .content {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 10rpx;
}
.payment .content .photo {
  width: 220rpx;
  height: 230rpx;
  padding: 10rpx;
}
.payment .content .photo image {
  width: 100%;
  height: 100%;
}
.payment .content .text {
  flex: 1;
  padding: 30rpx;
}
.payment .content .text .title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  color: #666;
}
.payment .content .text .bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  /*主容器*/
}
.payment .content .text .bottom .price {
  color: #f01;
}
.payment .content .text .bottom .stepper {
  width: 80px;
  height: 26px;
  /*给主容器设一个边框*/
  border: 1px solid #ccc;
  border-radius: 6rpx;
  display: flex;
  /*加号和减号*/
}
.payment .content .text .bottom .stepper text {
  width: 50rpx;
  line-height: 26px;
  text-align: center;
}
.payment .content .text .bottom .stepper text.normal {
  color: black;
}
.payment .content .text .bottom .stepper input {
  width: 40px;
  height: 26px;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}
.payment .total {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  box-sizing: border-box;
  display: flex;
  height: 110rpx;
  border-radius: 10rpx;
  padding: 0 30rpx;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  color: #666;
}
.payment .total .sum .add_up {
  color: #666;
  font-size: 28rpx;
}
.payment .total .sum .money {
  color: #f03;
  font-weight: 600;
}
.payment .total .go_pay {
  font-size: 24rpx;
  width: 100rpx;
  height: 50rpx;
  border: solid #f01 2rpx;
  color: #f01;
  border-radius: 30rpx;
  line-height: 50rpx;
  text-align: center;
}
